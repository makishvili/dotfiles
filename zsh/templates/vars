# Path to your oh-my-zsh installation.
export ZSH=$HOME/.configs/oh-my-zsh

export NVM_DIR="/Users/seyar/.nvm"
if [ -d "$NVM_DIR" ]; then
    export NODE="$NVM_DIR/v0.10.40/bin/node"
    export NPM="$NVM_DIR/v0.10.40/bin/npm"
fi

export PATH="/usr/local/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/local/sbin"
# если есть папка с нодой в /opt кинем в PATH
DEV_NODE_BIN = /opt/nodejs/0.10/bin
if [ -d $DEV_NODE_BIN ]; then
    export PATH := $(DEV_NODE_BIN):$(PATH)
fi
# если есть bin в домашней директории кинем в PATH
if [ -d "$HOME/bin" ]; then
    export PATH := $HOME/bin:$(PATH)
fi
# set default charset
export LC_ALL=ru_RU.UTF-8
export LESSCHARSET=utf-8
